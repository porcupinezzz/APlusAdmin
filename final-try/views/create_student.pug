extends layout 

block content 
    br
    form(action = "/student/createnew" method="POST")
        label(for="first_name") First Name &nbsp;
        input(type="text" name="first_name" id="first_name" required value = (undefined===studentinstance ? '' : student.first_name))
        br 
        br
        label(for="last_name") Last Name &nbsp;
        input(type="text" name="last_name" id="last_name" required value = (undefined===studentinstance ? '' : student.last_name)) 
        br
        br
        label(for="grade") Grade Level &nbsp;
        input(type="number" name="grade" id="grade" required value = (undefined===studentinstance ? '' : student.grade))
        br
        br
        label(for="siblings") Siblings
        br
        for students in current_students
            if students.checked
              input.checkbox-input(type='checkbox', name='siblings', id=students._id, value=students._id, checked)
            else
              input.checkbox-input(type='checkbox', name='siblings', id=students._id, value=students._id)
            label(for=students._id) &nbsp;#{students.first_name} 
        br
        br
        button(type="submit") Submit

    if errors
        for error in errors 
            li #{error}
    
        
